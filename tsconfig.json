{
  "extends": [
    "@react-native/typescript-config/tsconfig.json",
    "@tsconfig/react-native/tsconfig.json"
  ],
  "compilerOptions": {
    "types": ["react-native", "react-test-renderer", "jest"],
    "moduleResolution": "node16",
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@libs/*": ["libs/*"],
      "@navigation/*": ["navigation/*"],
      "@screens/*": ["screens/*"],
      "@services/*": ["services/*"],
      "@store/*": ["store/*"]
    },
    "jsx": "react-native",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
